<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-xs-4 col-xs-offset-4 center">
          <li><%= link_to gravatar_for(user), user %></li>  
          <li class"user-title"><%= link_to user.username, user %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <!--<%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary btn-xs" %>-->
          <!--<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>-->
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>

