
<%= bootstrap_form_for(@article, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10", label_errors: true) do |f| %>

  <%= f.form_group do %>
    <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <% end %>
   
  <%= f.text_field :title %>
  <%= f.text_area :description, rows: 10 %>
   
  <%= f.form_group do %>
    <%= f.primary %>
  <% end %>
  
<% end %>
  